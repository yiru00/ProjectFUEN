@model ProjectFUEN.Models.ViewModels.LoginVM

@{
    ViewBag.Title = "登入";
    Layout = "~/Views/Shared/_LoginPartial.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">登入系統</h3></div>
                <div class="card-body">
                    <form asp-action="Index" asp-controller="Login" method="post">
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputEmail" type="text" placeholder="帳號" asp-for="Account"/>
                            <label for="inputEmail" asp-for="Account">帳號</label>
                            <span asp-validation-for="Account" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputPassword" type="password" placeholder="密碼" asp-for="Password"/>
                            <label for="inputPassword" asp-for="Password">密碼</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <input class="btn btn-primary" type="submit" value="登入" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
